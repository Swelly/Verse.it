<div class = "poem-page">

  <div id = "instructions-header">
    <p id = "instruct"> <!-- Click to hide this header text -->
      Click on any word in the tweet list to move it into your poem blotter
    </p>
  </div>

  <div class = "poem-wrapper"> <!-- Holds the dynamic aspects -->

    <div id = "tweets">
      <p>User with listed tweets here</p>
      <!-- Tweets will occupy this window -->
    </div>

    <div id = "poem-form"> <!-- Holds the poem and the punctuation -->

      <div class = "poem">
        <!-- Words will go in here once tweet text is clicked -->
      </div>
      <div class = "punctuation-panel">
        <!-- clickable spans to add punctuation in front of words -->
        <span class = "punct"  id = "comma">comma</span>
        <span class = "punct"  id = "apostrophe">apostrophe</span>
        <span class = "punct"  id = "period">period</span>
        <span class = "punct"  id = "question">question</span>
        <span class = "punct"  id = "bang">bang</span>
        <span class = "punct"  id = "colon">colon</span>
        <span class = "punct"  id = "semicolon">semicolon</span>
        <span class = "punct"  id = "newline">newline</span>

        <div id = "char_count">Word Count</div> <!-- Will update with every character entered -->

      </div>
      <!-- Panel end -->
    </div>
    <!-- Poem form end -->

  </div>
  <!-- Wrapper end -->

</div>
<!-- Page end -->
