$(function() {

  console.log('js reached');
  $('#left-arrow').click(scrollLeft);
  $('#right-arrow').click(scrollRight);

  var box = $('#user-select');
  var userIndex = 0;
  $('#0').removeClass('user-display-hidden').addClass('user-display');
  box.innerHTML = $('0');

  var scrollLeft = function() {
    if (userIndex !== 0) {
      userIndex += 1;
      box.innerHTML = $('#' + userIndex);
    }
  };

  var scrollRight = function() {
    if (userIndex !== <%= @users.length - 1 %>) {
      userIndex -= 1;
      box.innerHTML = $('#' + userIndex);
    }
  };

})