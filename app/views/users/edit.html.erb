<div class = "container">
  <h2>Edit <%= @user.twitter_handle %></h2>
  <br>

  <%= form_for(resource, :as => @user, :url => update_user_path(@user), :html => { :method => :put }) do |f| %>

    <div>
      <%= f.label :bio %>
      <%= f.text_area :bio, size: "100x5", :value => @user.bio %>
    </div>

    <div>
  <!--     XXX
      need to get the following label formatted properly -->
      <%= f.label :homepage_url %>
      <%= f.text_field :url %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, :value => @user.email %></div>
    <div>

    <%= f.submit "Update", class: "btn btn-success" %></div>
  <% end %>

  <br>

  <%= link_to "Back", :back %>
</div>